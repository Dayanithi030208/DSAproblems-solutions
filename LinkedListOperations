class Node{
    int data;
    Node next;
    Node(int data){
        this.data=data;
        this.next=null;
    }
}
class MyLinkedList{
    Node head;
    public void insertion_at_head(int data){
        Node newnode=new Node(data);
        if(head==null){
            head=newnode;
        }else{
            newnode.next=head;
            head=newnode;
        }
    }
    public void insertion_at_end(int data){
        Node newnode=new Node(data);
        if(head==null){
            head=newnode;
        }else{
            Node temp=head;
            while(temp.next!=null){
                temp=temp.next;
            }
            temp.next=newnode;
        }
    }
    public void insertion_at_middle(int pos,int data){
        Node newnode=new Node(data);
        Node temp=head;
        pos=pos-2;
        if(pos==-1) insertion_at_head(data);
        else{
            while(pos!=0&&temp!=null){
            temp=temp.next;
            pos--;
        }
        if(temp==null){
            System.out.println("invalid pos");
        }else{
            newnode.next=temp.next;
            temp.next=newnode;
        }
        }
    }
    public void display(){
        Node temp=head;
        if(temp==null) System.out.println("Nothing");
        else{
            while(temp!=null){
            System.out.print(temp.data+" -> ");
            temp=temp.next;
        }
        System.out.println();
        }
    }
    public void deletion_at_start(){
        if(head==null) System.out.print("Nothing to delete");
        else{
            head=head.next;
        }
    }
    public void deletion_at_end(){
        if(head==null) System.out.println("Nothing to delete");
        else{
            Node temp=head;
            while(temp.next.next!=null){
                temp=temp.next;
            }
            temp.next=null;
        }
    }
    public void deletion_at_middle(int pos){
        pos=pos-2;
        if(pos==-1) head=head.next;
        else{
            Node temp=head;
            while(pos!=0&&temp!=null){
                temp=temp.next;
                pos--;
            }
            if(temp==null) System.out.println("Invalid position");
            else{
            temp.next=temp.next.next;    
            }
        }
    }
}
public class LinkedListOperations {
    public static void main(String[] args) {
        MyLinkedList linklist=new MyLinkedList();
        linklist.display();
        linklist.insertion_at_head(3);
        linklist.insertion_at_head(2);
        linklist.insertion_at_head(4);
        linklist.display();
        linklist.insertion_at_end(3);
        linklist.insertion_at_end(8);
        linklist.display();
        linklist.insertion_at_middle(6, 6);
        linklist.display();
        linklist.deletion_at_start();
        linklist.display();
        linklist.deletion_at_end();
        linklist.display();
        linklist.deletion_at_middle(3);
        linklist.display();
    }
}
