class Solution {
    public int countValidSelections(int[] nums) {
        int left=0;
        int right=0;
        int count=0;
        for(int i:nums) right+=i;
        for(int i=0;i<nums.length;i++){
            left+=nums[i];
            right-=nums[i];
            if(nums[i]!=0) continue;
            else if(left==right) count+=2;
            else if (Math.abs(left - right) == 1) count += 1;
        }
        return count;
    }
}
