class Solution {
    public int findRangeXOR(int l, int r) {
        //your code goes here
        //  int xor=0;
        //  for(int i=l;i<=r;i++){
        //     xor^=i;
        //  }
        //  return xor;
        l=findxorTillN(l-1);
        r=findxorTillN(r);
        return l^r;
    }
    public int findxorTillN(int n){
        if(n%4==1) return 1;
        else if(n%4==2) return n+1;
        else if(n%4==3) return 0;
        else return n;
    }
}
