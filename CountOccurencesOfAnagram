package com.practice.demo;
import java.util.*;
public class CountOccurencesOfAnagram {
	public static void main(String[] args) {
		String txt="forxxorfxdofr";
		String pat="for";
		int n=txt.length();
		int k=pat.length();
		int cnt=0;
		for(int start=0;start<=n-k;start++) {
			if(anagramcheck(txt,pat,n,k,start,start+k)) {
				cnt++;
			}
		}
		System.out.println(cnt);
	}
	private static boolean anagramcheck(String txt,String pat,int n,int k,int start,int end) {
		HashMap<Character,Integer> map=new HashMap<>();
		for(int i=0;i<k;i++) {
			map.put(txt.charAt(i),map.getOrDefault(txt.charAt(i),0)+1);
		}
		for(int i=start;i<end;i++) {
			map.put(txt.charAt(i),map.getOrDefault(txt.charAt(i),0)-1);
		}
		for(int i=0;i<map.size();i++) {
			if(map.get(pat.charAt(i))>0) return false;
		}
		return true;
	}
}
