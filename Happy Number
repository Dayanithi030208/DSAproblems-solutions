class Solution {
    public boolean isHappy(int n) {
        HashSet<Integer> set=new HashSet<Integer>();
        while(true){
            int sum=0;
            while(n!=0){
                sum+=((n%10)*(n%10));
                n=n/10;
            }
            if(sum==1) return true;
            n=sum;
           if(set.contains(n)) return false;
           set.add(n);
        }
    }
}
