class Solution {
    public String removeOuterParentheses(String s) {
        int counter=0;
        int n=s.length();
        StringBuilder ans=new StringBuilder();
        //  the reason why ) is first and ( last is avoid the leading (   
        for(int i=0;i<n;i++){
            if(s.charAt(i)==')') counter--;
            if(counter!=0) ans.append(s.charAt(i));
            if(s.charAt(i)=='(') counter++;
        }
        return ans.toString();
    }
}
