class Solution {
    public int smallestDivisor(int[] nums, int threshold) {
        int max=Integer.MIN_VALUE;
        for(int num:nums){
            if(num>max){
                max=num;
            }
        }
        int ans=max;
        int low=1;
        int high=max;
        while(low<high){
            int mid=(low+high)/2;
            int sum=0;
            for(int num:nums){
                sum+=(num+mid-1)/mid;
            }
            if(sum<=threshold) {
                high=mid;
            }
            else{
                low=mid+1;
            }
        }
        return low; 
    }
}
