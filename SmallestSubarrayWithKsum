package com.practice.demo;

public class SmallestSubArrayWithSumK {
	public static void main(String[] args) {
	int[] nums= {2,3,1,2,4,3};
	int n=nums.length;
	int k=7;
	int minlen=n;
	int sum=0;
	int i=0,j=0;
	while(j<n) {
		sum+=nums[j];
		while(sum>=k) {
			minlen=Math.min(minlen, j-i+1);
			sum-=nums[i];
			i++;
		}
		j++;
	}
	System.out.println(minlen);
	}
}
