/*
class Node {
    int data;
    Node next;

    Node(int d)
    {
        data = d;
        next = null;
    }
}*/

class Solution {
    public Node segregate(Node head) {
        // code here
        Node Zerohead=new Node(-1);
        Node Zero=Zerohead;
        Node Onehead=new Node(-1);
        Node One=Onehead;
        Node Twohead=new Node(-1);
        Node Two=Twohead;
        Node temp=head;
        while(temp!=null){
            if(temp.data==0){
                Zero.next=temp;
                Zero=Zero.next;
            }else if(temp.data==1){
                One.next=temp;
                One=One.next;
            }else{
                Two.next=temp;
                Two=Two.next;
            }
            temp=temp.next;
        }
        Two.next = null;

        // Stitch lists together correctly
        Zero.next = (Onehead.next != null) ? Onehead.next : Twohead.next;
        One.next = Twohead.next;

        // New head
        return Zerohead.next;
    }
}
